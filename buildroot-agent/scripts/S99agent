#!/bin/sh
#
# Buildroot Agent 启动脚本
# 放置于 /etc/init.d/S99agent
#

DAEMON="/usr/bin/buildroot-agent"
PIDFILE="/var/run/buildroot-agent.pid"
CONFIG="/etc/agent/agent.conf"
LOGFILE="/var/log/buildroot-agent.log"

# 检查程序是否存在
[ -x "$DAEMON" ] || exit 0

start() {
    printf "Starting buildroot-agent: "
    
    # 检查是否已运行
    if [ -f "$PIDFILE" ]; then
        PID=$(cat "$PIDFILE")
        if [ -d "/proc/$PID" ]; then
            echo "already running (PID $PID)"
            return 1
        fi
        rm -f "$PIDFILE"
    fi
    
    # 确保日志目录存在
    mkdir -p /var/log
    mkdir -p /etc/agent
    mkdir -p /tmp/agent_scripts
    
    # 启动守护进程
    $DAEMON -c "$CONFIG" -d
    
    # 检查是否成功启动
    sleep 1
    if [ -f "$PIDFILE" ]; then
        echo "OK"
        return 0
    else
        echo "FAILED"
        return 1
    fi
}

stop() {
    printf "Stopping buildroot-agent: "
    
    if [ -f "$PIDFILE" ]; then
        PID=$(cat "$PIDFILE")
        if [ -d "/proc/$PID" ]; then
            kill -TERM "$PID"
            
            # 等待进程退出
            for i in 1 2 3 4 5; do
                sleep 1
                if [ ! -d "/proc/$PID" ]; then
                    break
                fi
            done
            
            # 强制终止
            if [ -d "/proc/$PID" ]; then
                kill -KILL "$PID" 2>/dev/null
            fi
        fi
        rm -f "$PIDFILE"
        echo "OK"
    else
        echo "not running"
    fi
}

restart() {
    stop
    sleep 1
    start
}

status() {
    if [ -f "$PIDFILE" ]; then
        PID=$(cat "$PIDFILE")
        if [ -d "/proc/$PID" ]; then
            echo "buildroot-agent is running (PID $PID)"
            return 0
        else
            echo "buildroot-agent is not running (stale PID file)"
            return 1
        fi
    else
        echo "buildroot-agent is not running"
        return 1
    fi
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart|reload)
        restart
        ;;
    status)
        status
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|status}"
        exit 1
        ;;
esac

exit $?
